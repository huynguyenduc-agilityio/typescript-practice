{
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "includeFiles": "server/index.json"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "api/server.js"
    },
    { "source": "/authentication", "destination": "/" },
    { "source": "/cart", "destination": "/" },
    { "source": "/new-product", "destination": "/" },
    { "source": "/popular", "destination": "/" }
  ]
}
